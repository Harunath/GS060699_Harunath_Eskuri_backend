generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id  String @id @unique
  label  String  // Add this field
  city  String
  state String
  planning Planning[]
}

model SKU {
  id          String @id @unique
  label       String
  class       String
  department  String
  price       Decimal
  cost        Decimal
  planning    Planning[]
}

model Planning {
  id       String  @id @default(uuid())
  storeId  String
  skuId    String
  week     String
  units    String
  
  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)
  sku   SKU   @relation(fields: [skuId], references: [id], onDelete: Cascade)
}

